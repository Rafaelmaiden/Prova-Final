<%- contentFor('conteudo') %>  
  <% if(locals.msg){ %>
    <div style="text-align: center;  font-size: 18px" class="msg alert alert-success" role="alert">
      <%= msg %>
    </div>
    <% }%>
    <div class="container" style="margin-bottom: 9%;">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Lista de Funcionário</h5>

              <% if(funcionarios.length > 0){ %>
              <p class="card-text">
                Aqui está a lista de <code>Funcionários</code> cadastrados.
              </p>

              <h1>Funcionários</h1>
              <div class="table-responsive">
              <table style="text-align: center;" class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                <tr class="active">
                  
                  <th>Nome</th>
                  <th>Sobrenome</th>
                  <th>CPF</th>
                  <th>Endereço</th>
                  <th>Tempo de Serviço</th>
                  <th>Remuneração</th>
                  <th>Ações</th>
                </tr>
                </thead>

                <tbody >
                  <% funcionarios.forEach(function(funcionario) {%>
                    <tr>
                      
                      <td><%= funcionario.nome %></td>
                      <td><%= funcionario.sobrenome %></td>
                      <td><%= funcionario.cpf %></td>
                      <td><%= funcionario.endereco %></td>
                      <td><%= funcionario.tempo_de_servico %></td>
                      <td><%= funcionario.remuneracao %></td>
                      <td>
                        <a class="btn btn-info" href="/funcionarios/<%= funcionario._id %>/altera">Alterar</a>
                        <a class="btn btn-outline-danger" href="/funcionarios/<%= funcionario._id %>/remove">Remover</a>
                      </td>
                    </tr>
                    
                 <%});%>
               
                </tbody>
              </table>
            </div>
              <hr >
              <div  class="text-right">
                <a  href="/funcionarios/cadastro" class="btn btn-primary">
                  Cadastrar Funcionário
                </a>
              </div>
          </div>
          <% } %>
              
              <% if(funcionarios.length == 0) { %>
                <div >
                  <div class="text-center mt-5 mb-5 jumbotron">
                      <h5>Nenhum <code>Funcionário</code> cadastrado ainda.</h5>
                    </div>
                
                  <hr />
                  <div   class="text-right">
                    <a  href="/funcionarios/cadastro" class="btn btn-primary">
                      Cadastrar Funcionário
                    </a>
                  </div>
                </div>
                <% } %>

              </div>
            </div>
          </div>
        </div>
      
      