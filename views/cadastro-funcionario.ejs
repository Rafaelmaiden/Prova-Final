<%- contentFor('conteudo') %>  
<h2 class="card-primary card-outline card card-body" style="text-align: center">Novo funcionario</h2>
<% if(locals.msg){ %>
  <div style="text-align: center;  font-size: 18px" class="msg alert alert-success" role="alert">
    <%= msg %>
  </div>
  <% }%>

  <div class="container" >
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-2">
        <div class="card">
          <div class="card-body card-primary card-outline">
            <h5 class="card-title">Cadastro de Funcionário</h5>
            <p class="card-text">
              Complete o formulário abaixo para cadastrar
              um novo <code>Funcionário</code>.
            </p>
            <form action="/funcionarios/cadastro" method="post">
            
              <!-- Nome -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Nome</span>
                </div>
                <input type="text" name="nome" class="form-control">
              </div>

              <!-- Sobrenome -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Sobrenome</span>
                </div>
                <input type="text" name="sobrenome" class="form-control">
              </div>

              <!-- CPF -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">CPF</span>
                </div>
                <input type="text" name="cpf" class="form-control">
              </div>

              <!--Endereço -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Endereço</span>
                </div>
                <input class="form-control" name="endereco" type="text">
              </div>

              <!-- Tempo de Serviço -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Tempo de Serviço</span>
                </div>
                <input type="number" name="tempo_de_servico" class="form-control">
              </div>

              <!-- Remuneração -->
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Remuneração</span>
                </div>
                <input type="number" name="remuneracao" class="form-control">
              </div>

              <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
